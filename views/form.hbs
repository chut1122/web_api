      </div>
      <div class="form-group">
        <label for="places-type">Select a type:</label>
        <select id="places-type" name="placetype" class="form-control">
          {{> scrollablelist}}
        </select>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-outline-success" formaction="/getplaces">Submit</button>
      </div>
    </form>
  </div>


